<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/common")

    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/Scripts/validate/jquery.validate.min.js")
    @Scripts.Render("~/Scripts/layer/layer.js")
    @Scripts.Render("~/Scripts/laytpl.js")
    @Scripts.Render("~/Scripts/laypage/laypage.js")
    @Scripts.Render("~/Scripts/laydate/laydate.js")
    @Scripts.Render("~/Scripts/math.js")

    <script type="text/javascript">

        // 验证值小数位数不能超过两位
        jQuery.validator.addMethod("cash", function (value, element) {
            var decimal = /^-?\d+(\.\d{1,2})?$/;
            return this.optional(element) || (decimal.test(value));
        }, $.validator.format("金额的小数位数不能超过两位；"));

        @if(ViewBag.DomainContext.Online)
        {
            @:var _online = true;
                }
        else
        {
            @:var _online = false;
                    }

    </script>
</head>
<body>
    <div>
        @RenderBody()
    </div>
</body>
</html>
